<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintStart_toStartOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/view3"
            android:layout_width="447dp"
            android:layout_height="319dp"
            android:background="@drawable/congress_main_search"
            android:elevation="5dp"
            android:paddingBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.388" />

        <FrameLayout

            android:id="@+id/view4"
            android:layout_width="447dp"
            android:layout_height="319dp"
            android:elevation="5dp"
            android:paddingBottom="10dp"
            android:background="@drawable/congress_main_search"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.821">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="실시간 핫이슈"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"/>

            <ListView
                android:layout_width="445dp"
                android:layout_height="268dp"
                android:layout_gravity="bottom" />
        </FrameLayout>


        <View
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@drawable/congress_symbol_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.081" />

        <View
            android:layout_width="480dp"
            android:layout_height="2dp"
            android:background="#F4F4F4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.148" />

        <View
            android:id="@+id/view2"
            android:layout_width="458dp"
            android:layout_height="84dp"
            android:elevation="5dp"
            android:paddingBottom="10dp"
            android:background="@drawable/congress_main_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.194" />



        <View
            android:id="@+id/search2"
            android:layout_width="5dp"
            android:layout_height="8dp"
            android:background="@drawable/congress_main_searcg_icon2"
            android:elevation="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/search1"
            app:layout_constraintEnd_toEndOf="@+id/search1"
            app:layout_constraintHorizontal_bias="0.708"
            app:layout_constraintStart_toStartOf="@+id/search1"
            app:layout_constraintTop_toTopOf="@+id/search1"
            app:layout_constraintVertical_bias="1.0" />

        <View
            android:id="@+id/search1"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:background="@drawable/congress_main_search_icon"
            android:elevation="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintHorizontal_bias="0.076"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/view2"
            app:layout_constraintVertical_bias="0.472" />

        <View
            android:id="@+id/menu_bar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/menu_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.082"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.102" />


        <View
            android:id="@+id/location"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/location"
            android:elevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.148"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.319" />

        <EditText
            android:id="@+id/search_text"
            android:layout_width="367dp"
            android:layout_height="59dp"
            android:background="@android:color/transparent"
            android:text="검색"
            android:textColor="#A89E9E"
            android:textSize="35sp"
            android:elevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.658"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.201" />

        <TextView
            android:layout_marginStart="20dp"
            android:id="@+id/search_text2"
            android:layout_width="367dp"
            android:layout_height="59dp"
            android:background="@android:color/transparent"
            android:elevation="5dp"
            android:gravity=""
            android:text="부산 광역시 해운대구"
            android:textColor="#000000"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.658"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.316" />

        <TextView
            android:id="@+id/calbtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/layout_background"
            android:elevation="2dp"
            android:gravity="center"
            android:text="Calenderactivity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.638"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.974" />

        <TextView
            android:id="@+id/petitionbtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/layout_background"
            android:elevation="2dp"
            android:gravity="center"
            android:text="Petition"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/calbtn"
            app:layout_constraintHorizontal_bias="0.561"
            app:layout_constraintStart_toEndOf="@+id/profbtn" />

        <TextView
            android:id="@+id/profbtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/layout_background"
            android:elevation="2dp"
            android:gravity="center"
            android:text="Profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.976" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.drawerlayout.widget.DrawerLayout>
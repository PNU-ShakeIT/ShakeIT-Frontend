<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".peititon.Petition">

    <TextView
        android:id="@+id/expiration_btn"
        android:layout_width="90dp"
        android:layout_height="33dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="91dp"
        android:background="@drawable/oval_edge"
        android:elevation="8dp"
        android:gravity="center"
        android:text="동의만료 청원"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/petition_searchview" />

    <View
        android:id="@+id/view"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginTop="21dp"
        android:background="@color/line_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="151dp"
        android:layout_height="29dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/assemblylogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="청원"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/progress_btn"
        android:layout_width="90dp"
        android:layout_height="33dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/oval_edge"
        android:elevation="8dp"
        android:gravity="center"
        android:text="진행중인 청원"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/petition_searchview" />
    <android.widget.SearchView
        android:id="@+id/petition_searchview"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/oval_edge"
        android:elevation="10dp"
        android:queryBackground="@null"

        android:iconifiedByDefault="false"
        android:paddingLeft="0dp"
        android:queryHint="@string/petition"
        android:searchIcon="@drawable/serachicon_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

    </android.widget.SearchView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/progress_hot_recyclerview"
        android:layout_width="340dp"
        android:layout_height="210dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/layout_background"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expiration_btn" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/petition_notice"
        android:layout_width="340dp"
        android:layout_height="210dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/layout_background"
        android:elevation="10dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_hot_recyclerview" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".peititon.Petition">

    <FrameLayout
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/round_edge"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/assemblymark_right">

        </ImageView>
    </FrameLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="391dp"
        android:layout_height="52dp"
        android:background="#F5F5F5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/expiration_btn"
        android:layout_width="90dp"
        android:layout_height="33dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="91dp"
        android:textColor="@color/black"
        android:background="@drawable/oval_edge"
        android:elevation="5dp"
        android:gravity="center"
        android:text="동의만료 청원"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/petition_searchview" />

    <View
        android:id="@+id/view"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginTop="21dp"
        android:background="@color/line_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="151dp"
        android:layout_height="29dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/assemblylogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:textColor="@color/black"
        android:text="청원"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView

        android:textColor="@color/black"
        android:id="@+id/progress_btn"
        android:layout_width="90dp"
        android:layout_height="33dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/oval_edge"
        android:elevation="5dp"
        android:gravity="center"
        android:text="진행중인 청원"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/petition_searchview" />
    <android.widget.SearchView
        android:id="@+id/petition_searchview"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/oval_edge"
        android:elevation="5dp"
        android:queryBackground="@null"

        android:iconifiedByDefault="false"
        android:paddingLeft="0dp"
        android:queryHint="@string/petition"
        android:searchIcon="@drawable/serachicon_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

    </android.widget.SearchView>

    <FrameLayout
        android:id="@+id/proceed_petition"
        android:layout_width="340dp"
        android:layout_height="210dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/oval_edge"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expiration_btn"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="실시간 진행중인 청원"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            >
        </TextView>

        <TextView
            android:id="@+id/proceed_realtime_1"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:text="누어나예누어누어나예누adsasdasdasdaasdasdasd어누어나예누어누어나예누어"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/proceed_realtime_2"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="88dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:gravity="center"
            android:padding="2dp"
            android:text="누어나예누어나예누어나예누어"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:textColor="@color/black"
            android:padding="2dp"
            android:id="@+id/proceed_realtime_3"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:textStyle="bold"
            android:text="누어나예누어"
            android:gravity="center"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="126dp"
            >
        </TextView>

        <TextView
            android:padding="2dp"
            android:textColor="@color/black"
            android:id="@+id/proceed_realtime_4"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:textStyle="bold"
            android:text="실시간누어나예누어 진행중 누어나예누어 첫번째"
            android:textSize="12sp"
            android:gravity="center"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="164dp"
            >
        </TextView>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/pending_petition"
        android:layout_width="340dp"
        android:layout_height="210dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/oval_edge"
        android:elevation="5dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/proceed_petition"
        >
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="20dp"
            android:text="실시간 만료된 청원"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            >
        </TextView>
        <TextView
            android:textColor="@color/black"
            android:padding="2dp"
            android:id="@+id/pending_realtime_1"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="누어나예누어누어나예누어누어나예누어누어나예누어"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            >
        </TextView>
        <TextView
            android:textColor="@color/black"
            android:padding="2dp"
            android:id="@+id/pending_realtime_2"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="누어나예누어나예누어나예누어"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="88dp"
            >
        </TextView>
        <TextView
            android:textColor="@color/black"
            android:padding="2dp"
            android:id="@+id/pending_realtime_3"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:textStyle="bold"
            android:text="누어나예누어"
            android:textSize="12sp"
            android:gravity="center"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="126dp"
            >
        </TextView>

        <TextView
            android:id="@+id/pending_realtime_4"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="164dp"
            android:gravity="center"
            android:padding="2dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:text="실시간누어나예누어 진행중 누어나예누어 첫번째"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"></TextView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
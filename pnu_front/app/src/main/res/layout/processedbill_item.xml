<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ProcessedBill_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="개dsadadadsadadasdadasddadsadadsdaadsad"
            android:layout_marginBottom="1dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp">

            <TextView
                android:id="@+id/ProcessedBill_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginRight="2dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="20ewqewqe"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="15dp"
                android:text="|"/>
            <TextView
                android:id="@+id/ProcessedBill_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="의원"/>

            <TextView
                android:id="@+id/ProcessedBill_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/black"
                android:gravity="end"
                android:textSize="15sp"
                android:text="2019-10-20~ 2019-10-21"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp">
            <TextView
                android:id="@+id/Bill_association"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:text="안녕하세요"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textSize="13dp"
                android:text="원안가결"/>
        </LinearLayout>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/ProcessedBill_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="http://helloworld.com" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:id="@+id/lawmaking">

    <LinearLayout
        android:elevation="5dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_edge"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/black"
            android:id="@+id/lawmaking_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:text="데이터를 불러오는 중입니다..."
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                android:id="@+id/lawmaking_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginRight="2dp"
                android:textSize="15dp"
                android:text=""/>
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="15dp"
                android:text="|"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/lawmaking_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="15dp"
                android:text=""/>

            <TextView
                android:textColor="@color/black"
                android:id="@+id/lawmaking_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="end"
                android:textSize="15dp"
                android:text=""/>

        </LinearLayout>
        <TextView
                android:textColor="@color/black"
                android:id="@+id/association"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="1dp"
                android:textSize="13dp"
                android:text=""/>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/lawmaking_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="12dp"
            android:text="http://sistermode.com"/>

    </LinearLayout>
</LinearLayout>